<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arimsky.blogapi.dao.AdminPermissionMapper">

    <resultMap id="BaseResultMap" type="com.arimsky.blogapi.pojo.entity.AdminPermission">
        <!--@Table blog_admin_permission-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="adminId" column="admin_id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, admin_id, permission_id
        from msblogapp.blog_admin_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, admin_id, permission_id
        from msblogapp.blog_admin_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, admin_id, permission_id
        from msblogapp.blog_admin_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="adminId != null">
                and admin_id = #{adminId}
            </if>
            <if test="permissionId != null">
                and permission_id = #{permissionId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into msblogapp.blog_admin_permission(admin_id, permission_id)
        values (#{adminId}, #{permissionId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update msblogapp.blog_admin_permission
        <set>
            <if test="adminId != null">
                admin_id = #{adminId},
            </if>
            <if test="permissionId != null">
                permission_id = #{permissionId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from msblogapp.blog_admin_permission where id = #{id}
    </delete>

</mapper>