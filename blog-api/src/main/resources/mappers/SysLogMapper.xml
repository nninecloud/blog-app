<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arimsky.blogapi.dao.SysLogMapper">

    <resultMap id="BaseResultMap" type="com.arimsky.blogapi.pojo.entity.SysLog">
        <!--@Table blog_sys_log-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createDate" column="create_date" jdbcType="INTEGER"/>
        <result property="ip" column="ip" jdbcType="VARCHAR"/>
        <result property="method" column="method" jdbcType="VARCHAR"/>
        <result property="module" column="module" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="operation" column="operation" jdbcType="VARCHAR"/>
        <result property="params" column="params" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="INTEGER"/>
        <result property="userid" column="userid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, create_date, ip, method, module, nickname, operation, params, time, userid
        from msblogapp.blog_sys_log
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, create_date, ip, method, module, nickname, operation, params, time, userid
        from msblogapp.blog_sys_log
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, create_date, ip, method, module, nickname, operation, params, time, userid
        from msblogapp.blog_sys_log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="ip != null and ip != ''">
                and ip = #{ip}
            </if>
            <if test="method != null and method != ''">
                and method = #{method}
            </if>
            <if test="module != null and module != ''">
                and module = #{module}
            </if>
            <if test="nickname != null and nickname != ''">
                and nickname = #{nickname}
            </if>
            <if test="operation != null and operation != ''">
                and operation = #{operation}
            </if>
            <if test="params != null and params != ''">
                and params = #{params}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
            <if test="userid != null">
                and userid = #{userid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into msblogapp.blog_sys_log(create_date, ip, method, module, nickname, operation, params, time, userid)
        values (#{createDate}, #{ip}, #{method}, #{module}, #{nickname}, #{operation}, #{params}, #{time}, #{userid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update msblogapp.blog_sys_log
        <set>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="ip != null and ip != ''">
                ip = #{ip},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
            <if test="module != null and module != ''">
                module = #{module},
            </if>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="operation != null and operation != ''">
                operation = #{operation},
            </if>
            <if test="params != null and params != ''">
                params = #{params},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="userid != null">
                userid = #{userid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from msblogapp.blog_sys_log where id = #{id}
    </delete>

</mapper>