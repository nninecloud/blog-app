<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arimsky.blogapi.dao.CategoryMapper">

    <resultMap id="BaseResultMap" type="com.arimsky.blogapi.pojo.entity.Category">
        <!--@Table blog_category-->
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          category_id, avatar, category_name, description
        from msblogapp.blog_category
        where category_id = #{categoryId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          category_id, avatar, category_name, description
        from msblogapp.blog_category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          category_id, avatar, category_name, description
        from msblogapp.blog_category
        <where>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="avatar != null and avatar != ''">
                and avatar = #{avatar}
            </if>
            <if test="categoryName != null and categoryName != ''">
                and category_name = #{categoryName}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="categoryId" useGeneratedKeys="true">
        insert into msblogapp.blog_category(avatar, category_name, description)
        values (#{avatar}, #{categoryName}, #{description})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update msblogapp.blog_category
        <set>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="categoryName != null and categoryName != ''">
                category_name = #{categoryName},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
        </set>
        where category_id = #{categoryId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from msblogapp.blog_category where category_id = #{categoryId}
    </delete>

</mapper>