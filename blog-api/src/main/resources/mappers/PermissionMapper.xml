<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arimsky.blogapi.dao.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.arimsky.blogapi.pojo.entity.Permission">
        <!--@Table blog_permission-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, path, description
        from msblogapp.blog_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, path, description
        from msblogapp.blog_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, path, description
        from msblogapp.blog_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="path != null and path != ''">
                and path = #{path}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into msblogapp.blog_permission(name, path, description)
        values (#{name}, #{path}, #{description})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update msblogapp.blog_permission
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="path != null and path != ''">
                path = #{path},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from msblogapp.blog_permission where id = #{id}
    </delete>

</mapper>